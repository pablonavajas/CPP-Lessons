/*Prepare to play the famous game "Rock Paper Scissors Lizard Spock" 
From the TV Show: The Big Bang Theory */

#include <iostream>
#include <stdlib.h>

int main() {

  // Long live and prosper
  
  srand (time(NULL));
  
  int computer = rand() % 5 + 1;
  
  int user = 0;
  
  std::cout << "\nReady to Play \"Rock Paper Scissors Lizard Spock\"!!\n\n1) ✊\n2) ✋\n3) ✌️\n4) 🦎\n5) 🖖\n\n";
  
  std::cin >> user;
  
  std::cout << "\nshoot!\n\n";
  
  if (user == 1 && computer == 1) {
    std::cout << "Rock vs Rock!\nIt's a tie!\n\n";
  }
  
  else if (user == 1 && computer == 2) {
    std::cout << "Rock vs Paper\nPaper covers Rock\nYou lose...\n\n";
  }
  
  else if (user == 1 && computer == 3) {
    std::cout << "Rock vs Scissors\nRock crushes Scissors!\nYou win!\n\n";
  }
  
  else if (user == 1 && computer == 4) {
    std::cout << "Rock vs Lizard\nRock crushes Lizard!\nYou win!\n\n";
  }
  
  else if (user == 1 && computer == 5) {
    std::cout << "Rock vs Spock\nSpock vaporizes Rock\nYou lose...\n\n";
  }
  
  else if (user == 2 && computer == 1) {
    std::cout << "Paper vs Rock!\nPaper covers Rock!\nYou win!\n\n";
  }
  
  else if (user == 2 && computer == 2) {
    std::cout << "Paper vs Paper\nIt's a tie!\n\n";
  }
  
  else if (user == 2 && computer == 3) {
    std::cout << "Paper vs Scissors\n Scissors cut Paper\nYou lose...\n\n";
  }
  
  else if (user == 2 && computer == 4) {
    std::cout << "Paper vs Lizard\nLizard eats Paper\nYou lose...\n\n";
  }
  
  else if (user == 2 && computer == 5) {
    std::cout << "Paper vs Spock\nPaper disproves Spock!\nYou win!\n\n";
  }

  else if (user == 3 && computer == 1) {
    std::cout << "Scissors vs Rock\nRock crushes Scissors!\nYou lose...\n\n";
  }
  
  else if (user == 3 && computer == 2) {
    std::cout << "Scissors vs Paper\nScissors cut Paper!\nYou win!\n\n";
  }
  
  else if (user == 3 && computer == 3) {
    std::cout << "Scissors vs Scissors\n It's a tie!\n\n";
  }
  
  else if (user == 3 && computer == 4) {
    std::cout << "Scissors vs Lizard\nScissors decapitates Lizard!\nYou win!\n\n";
  }
  
  else if (user == 3 && computer == 5) {
    std::cout << "Scissors vs Spock\nSpock smashes scissors\nYou lose...\n\n";
  }
  
  else if (user == 4 && computer == 1) {
    std::cout << "Lizard vs Rock\nRock crushes Lizard\nYou lose...\n\n";
  }
  
  else if (user == 4 && computer == 2) {
    std::cout << "Lizard vs Paper\nLizard eats Paper!\nYou win!\n\n";
  }
  
  else if (user == 4 && computer == 3) {
    std::cout << "Lizard vs Scissors\nScissors decapitates Lizard\nYou lose...\n\n";
  }
  
  else if (user == 4 && computer == 4) {
    std::cout << "Lizard vs Lizard\nIt's a tie!\n\n";
  }
  
  else if (user == 4 && computer == 5) {
    std::cout << "Lizard vs Spock\nLizard poisons Spock!\nYou win!\n\n";
  }
  
  else if (user == 5 && computer == 1) {
    std::cout << "Spock vs Rock\nSpock vaporizes rock!\nYou win!\n\n";
  }
  
  else if (user == 5 && computer == 2) {
    std::cout << "Spock vs Paper\nPaper disproves Spock\nYou lose...\n\n";
  }
  
  else if (user == 5 && computer == 3) {
    std::cout << "Spock vs Scissors\nSpock smashes scissors!\nYou win!\n\n";
  }
  
  else if (user == 5 && computer == 4) {
    std::cout << "Spock vs Lizard\nLizard poisons Spock\nYou lose...\n\n";
  }
  
  else if (user == 5 && computer == 5) {
    std::cout << "Spock vs Spock\nIt's a tie!\n\n";
  }
  
  else {
    std::cout << "Invalid input.\n\n";
  }
  
}
