#include <iostream>

int main() 
{
  int dog_name;
  // Dog age calculator for dogs older than 2
  int dog_age;
  int early_years;
  int later_years;
  int human_years;
  
  //The first two years of a dog's life count as 21 human years.
  
  std::cout << "Enter dog name: ";
  std::cin >> dog_name;
  
  std::cout << "Enter dog age: ";
  std::cin >> dog_age;
  
  early_years = 21;
  
  later_years = (dog_age - 2)*4;
  
  human_years = early_years + later_years;
  
  std::cout << "My name is " << dog_name << "! Ruff ruff, I am " << human_years << "years old in human years.\n";
    
}
