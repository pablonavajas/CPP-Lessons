  std::cout << "   1. Venus   2. Mars    3. Jupiter\n";
  std::cout << "   4. Saturn  5. Uranus  6. Neptune\n\n";
  
  std::cout << "Enter the number of the planet you want to fight on: ";
  std::cin >> planet_num;
  
  switch (planet_num) {
      
    case 1:
      weight = earthw_w * 0.78;
      std::cout << weight;
      break;
   
   case 2:
      weight = earthw_w * 0.39;
      std::cout << weight;
      break;
  
   case 3:
      weight = earthw_w * 2.65;
      std::cout << weight;
      break;
      
